<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Overall desired height for the layer-list -->
    <item android:height="24dp"> <!-- This item just sets a canvas height, can be transparent -->
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <size
                android:width="48dp"
                android:height="24dp" /> <!-- Explicitly state total desired size -->
        </shape>
    </item>

    <!-- Left Icon -->
    <item
        android:width="24dp"
        android:height="24dp"
        android:drawable="@drawable/group_24px"
        android:right="24dp" />

    <!-- Right Icon -->
    <item
        android:width="24dp"
        android:height="24dp"
        android:drawable="@drawable/group_24px"
        android:left="24dp" />

</layer-list>

